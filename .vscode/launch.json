    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "gdb",
            "request": "launch",
            "target": "${fileDirname}/${fileBasenameNoExtension}.bin",
            "cwd": "${fileDirname}",
            "windows": {
                "gdbpath": "C:/ence461/tool-chain/gcc-arm-none-eabi-9-2019-q4/bin/arm-none-eabi-gdb.exe",
            },
            "osx": {
                "gdbpath": "/usr/local/bin/arm-none-eabi-gdb"
            },
            "linux": {
                "gdbpath": "/usr/bin/gdb-multiarch",
            },
            "autorun": [
                "target remote localhost:3333",
                "symbol-file ${fileDirname}/${fileBasenameNoExtension}.bin",
                "load",
                "monitor reset halt",
                "advance main"
            ],
            "preLaunchTask": "Make"
        }
    ]
}